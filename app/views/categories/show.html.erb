<header data-controller="category" class="bg-white shadow w-full">
  <div class="w-2/5 mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h1 data-action="mouseover->category#show mouseout->category#hide" class="text-3xl text-center font-bold text-gray-900 hover:text-blue-900 cursor-pointer">
      <%= link_to "Category: #{@category.name}", edit_category_path(@category) %>
    </h1>
  </div>

  <div data-category-target="description" class="absolute top-16 right-1/3 bg-white rounded border-2 border-blue-900 h-20 w-40 flex flex-wrap items-center hidden">
    <p class="text-xs text-center"><%= @category.description %></p>
  </div>

  <div class="hidden">
    <%= link_to "Delete", category_path(@category), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</header>




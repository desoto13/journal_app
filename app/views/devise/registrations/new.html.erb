<section class="px-2 py-8 bg-white md:px-0">
    <div class="container items-center max-w-6xl px-8 mx-auto xl:px-5">
      <div class="flex flex-wrap items-center justify-around sm:-mx-3">
        
        <div class="w-full bg-white sm:w-5/12">
          <div class="flex flex-col items-start justify-start w-full h-full p-10 bg-blue-300 border-blue-600 border-t-4 border-r-4">
            <div class="flex text-blue-800 items-center justify-center w-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg><span class="block text-blue-800 xl:inline text-4xl font-bold">TaskMaster</span>
            </div>
            <h4 class="w-full text-3xl font-bold text-center">Sign up</h4>
            <p class="text-lg text-gray-500">or, if you have an account you can immediately<span class="text-green-600"><%= render "devise/shared/links" %></span></p>
                <div class="relative w-full space-y-8">

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>
                    
                      <div class="relative mt-4">
                        <%= f.label :email, class:"font-medium text-gray-900" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block w-full px-2 py-2 mt-2 text-l placeholder-gray-400 bg-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600 focus:ring-opacity-50", placeholder:"Enter Your Email Address" %>
                      </div>
                    
                      <div class="relative mt-4">
                        <%= f.label :password, class:"font-medium text-gray-900" %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class:"block w-full px-2 py-2 mt-2 text-l placeholder-gray-400 bg-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600 focus:ring-opacity-50" %>
                      </div>
                    
                      <div class="relative mt-4">
                        <%= f.label :password_confirmation, class:"font-medium text-gray-900" %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block w-full px-2 py-2 mt-2 text-l placeholder-gray-400 bg-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600 focus:ring-opacity-50" %>
                      </div>
                    
                      <div class="relative">
                        <%= f.submit "Create Account", class:"inline-block w-full px-5 py-4 mt-5 text-lg font-medium text-center text-white transition duration-200 bg-blue-600 rounded-lg hover:bg-blue-700 ease cursor-pointer" %>
                      </div>
                    <% end %>
                </div>
          </div>
        </div>

        <div class="w-full md:w-1/2">
          <div class="w-full h-auto overflow-hidden rounded-md shadow-xl sm:rounded-xl">
            <%= image_tag("Sign_Up.gif", class:"w-full") %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%= render 'mains/footer' %>
